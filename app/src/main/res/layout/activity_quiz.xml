<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    tools:context="com.od.danich.mill.QuizActivity"
    android:background="@drawable/background_activity"    >


    <LinearLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1.6"
        android:weightSum="3">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.8">
            <ImageButton
                android:id="@+id/btn_help_fifty_fifty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_5050"
                android:background="@drawable/btn_tips_selector"
                android:layout_alignParentTop="true"
                android:onClick="onClick"/>
            <ImageButton
                android:id="@+id/btn_help_group"
                android:src="@drawable/ic_action_social_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_tips_selector"
                android:layout_below="@+id/btn_help_friend"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:onClick="onClick"/>
            <ImageButton
                android:id="@+id/btn_help_friend"
                android:src="@drawable/ic_action_maps_local_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_tips_selector"
                android:layout_below="@+id/btn_help_fifty_fifty"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:onClick="onClick"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1.2"
            android:gravity="center_horizontal">
            <Button
                android:id="@+id/btn_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/exit"
                style="@style/btn_general"
                android:background="@drawable/btn_choice_selector"
                android:onClick="onClick"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp" />
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/ic_millionaire_logo"
                android:onClick="onClick"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_marginBottom="10dp">
                <TextView
                    android:id="@+id/tv_info_current"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp" />
                <Button
                    android:id="@+id/btn_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/next"
                    style="@style/btn_general"
                    android:background="@drawable/btn_dialog_selector"
                    android:onClick="onClick"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right|end|top"
            android:layout_gravity="right"
            android:foregroundGravity="right">
            <ListView
                android:id="@+id/lv_cash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right" />
        </RelativeLayout>
    </LinearLayout>





    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignBottom="@+id/layout_top"
        android:layout_marginBottom="10dp">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                style="@style/question"
                android:gravity="center_vertical"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_question"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:textSize="16sp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="#fff"/>
            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="2dp">
            <LinearLayout
                android:id="@+id/ll_a"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:minHeight="40dp"
                android:orientation="horizontal"
                style="@style/choice"
                android:background="@drawable/btn_choice_selector"
                android:gravity="center_vertical"
                android:clickable="true"
                android:onClick="onClick">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A: "
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#fff"/>
                <TextView
                    android:id="@+id/tv_choice_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#fff" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_c"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                style="@style/choice"
                android:gravity="center_vertical"
                android:clickable="true"
                android:onClick="onClick">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C: "
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#fff"/>
                <TextView
                    android:id="@+id/tv_choice_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColor="#fff"/>
            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ll_b"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                style="@style/choice"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:clickable="true"
                android:onClick="onClick"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B: "
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#fff"/>
                <TextView
                    android:id="@+id/tv_choice_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#fff"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_d"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                style="@style/choice"
                android:gravity="center_vertical"
                android:clickable="true"
                android:onClick="onClick">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="D: "
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#fff"/>
                <TextView
                    android:id="@+id/tv_choice_d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    android:textColor="#fff"/>
            </LinearLayout>
        </TableRow>
    </TableLayout>
</LinearLayout>
